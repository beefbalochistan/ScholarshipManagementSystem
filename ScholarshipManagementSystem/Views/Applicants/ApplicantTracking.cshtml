                url: '@Url.Action("_Index", "ApplicantStudents")',
                data: {
                    id: applicantId
                },
                success: function (data) {
                    $("#greenNoteDiv").html(data);
                    $(".loading").hide();
                }
            });
        }
        function fetchApplicantMessages(applicantId) {
        $(".loading").show();
