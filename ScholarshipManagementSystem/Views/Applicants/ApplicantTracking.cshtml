        function validate(filesize) {
            $('#GreenNoteOnFailed').hide();
            var file_size = filesize;
            if (file_size > 2097152) {
                $('#GreenNoteOnFailed').show();
                $('#GreenNoteOnFailedText').text("File Size not greater then 2MB'");
                return false;
            }
            return true;
        }
