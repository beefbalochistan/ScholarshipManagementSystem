                url: '@Url.Action("_Index", "ApplicantAttachments")',
                data: {
                    id: applicantId
                },
                    success: function (data) {
                    $("#attachmentdiv").html(data);
                    $(".loading").hide();
                }
            });
        }
        function fetchApplicantComments(applicantId) {
        $(".loading").show();
