@model IEnumerable<DAL.Models.Domain.VirtualAccount.Trunch>

@{
    ViewBag.Title = "Trunch";
    ViewBag.pTitle = "Trunch";
    ViewBag.pageTitle = "Account";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-sm-6">
                    @*<div class="mt-2">
                        <h5>Trunch</h5>
                    </div>*@
                    <div class="card">
                        <div class="card-body">
                            <div class="product-img position-relative">
                                @*<div class="avatar-sm product-ribbon">
                                        <span class="avatar-title rounded-circle  bg-primary">
                                            - 25 %
                                        </span>
                                    </div>*@
                                <img src="~/assets/images/bank.png" width="230" alt="" class="img-fluid mx-auto d-block">
                            </div>
                            <div class="text-center">
                                <h5 class="mb-1 text-truncate"><a asp-controller="Trunches" asp-action="Edit" asp-route-id="@item.TrunchId" class="text-dark">@item.Name </a></h5>
                                @{
                                    if (item.IsActive)
                                    {
                                        <i class="display-4 mdi mdi-progress-check text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="display-4 mdi mdi-progress-close text-warning"></i>
                                    }
                                }
                                <div class="my-0">Commit Amount: <b>@item.CurrentCommittedAmount</b></div>
                                <div class="my-0">Approved Amount: <b>@item.ApprovedAmount</b></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- end row -->
    </div>
</div>
