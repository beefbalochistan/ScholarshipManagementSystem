@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script>
    $(document).ready(function () {
        //fetchName();
    });
        $('#PaymentMethodId').change(function () {
            fetchName();
        });
        function fetchName() {
            var paymentMethod = $('#PaymentMethodId').val();
            if (paymentMethod == 0) {
                Swal.fire({
                    title: "Failed!",
                    text: "Please select the Payment Method",
                    type: "warning",
                    showCancelButton: 0,
                    confirmButtonColor: "#34c38f"
                });
                $('#Name').val('');
                return;
            }
           var txtTranche = $('#Name');
           //alert(paymentMethod);
            $.ajax({
                type: "POST",
                url: "/Tranches/GetTrancheName",
                data: { PaymentMethodId: paymentMethod, CurrentFYCode: @CurrentFiscalYearCode },
                dataType: "json",
                success: function (response) {
                    if (response.isValid) {
                        //alert(response.name);
                        txtTranche.val(response.name);
                    } else {

                    }
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        }
    </script>
