@model IEnumerable<DAL.Models.Domain.Student.ApplicantStudent>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SelectionStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicantReferenceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeverityLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attachment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Applicant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SelectionStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicantReferenceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeverityLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attachment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Applicant.ApplicantReferenceNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ApplicantStudentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ApplicantStudentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ApplicantStudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
