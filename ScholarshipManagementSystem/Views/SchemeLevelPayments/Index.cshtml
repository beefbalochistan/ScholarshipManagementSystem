@model IEnumerable<ScholarshipManagementSystem.Models.Domain.ScholarshipSetup.SchemeLevelPayment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScholarshipFiscalYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchemeLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScholarshipFiscalYear.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchemeLevel.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SchemeLevelPaymentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SchemeLevelPaymentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SchemeLevelPaymentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
