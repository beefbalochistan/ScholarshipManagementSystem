@model IEnumerable<SMSService.Models.Domain.AutoSMSApi.SMSAPIServiceAuditTrail>

<div class="row">
    <div class="col-md-6">
        @foreach (var item in Model)
        {


            <div class="chat-conversation p-3">
                <ul class="list-unstyled" data-simplebar style="max-height: 470px;">
                    <li>
                        <div class="chat-day-title">
                            @{
                                if (item.ResponseMessage.Contains("Successfully"))
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <i class="mdi mdi-check-all mr-2"></i>
                                        @item.ReferenceId - @item.ResponseMessage
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="mdi mdi-block-helper mr-2"></i>
                                        @item.ReferenceId - @item.ResponseMessage
                                    </div>
                                }
                            }
                        </div>
                    </li>
                    <li>
                        <div class="conversation-list">
                            <div class="ctext-wrap">
                                <div class="conversation-name">@item.DestinationNumber</div>
                                <p>
                                    @item.Text
                                </p>
                                <p class="chat-time mb-0"><i class="bx bx-time-five align-middle mr-1"></i> @item.SendOn - @item.UserId</p>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        }
    </div>
</div>

@{
    if (Model.Count() == 0)
    {
        <div class="alert alert-info alert-dismissible fade show mb-0" role="alert">
            <i class="mdi mdi-alert-circle-outline mr-2"></i>
            SMS Inbox is emplty
        </div>
    }
}
