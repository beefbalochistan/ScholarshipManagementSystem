@model IEnumerable<ScholarshipManagementSystem.Models.Domain.MasterSetup.DegreeLevel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree.Code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DegreeLevelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DegreeLevelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DegreeLevelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
